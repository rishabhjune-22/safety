<!-- res/drawable/rounded_search_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@color/white" /> <!-- Background color -->
    <corners android:radius="24dp" /> <!-- Adjust the radius to control roundness -->
    <stroke
        android:width="1dp"
        android:color="@color/green" /> <!-- Border color and width -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" /> <!-- Padding inside the SearchView -->
</shape>
